package application;

import java.text.SimpleDateFormat;
import java.util.Date;
import java.util.Locale;
import java.util.Scanner;

import entities.ImportedProduct;
import entities.Product;
import entities.UsedProduct;

public class Program {
	
	
	
	public static void main (String[] args) {
		
		SimpleDateFormat sdf = new SimpleDateFormat("dd/MM/yyyy");
		
		Locale.setDefault(Locale.US);
		Scanner sc = new Scanner(System.in);
		Product p = new Product("Notebook", 1100.00);
		
		System.out.println(p.priceTag());
		
		Product p1 = new ImportedProduct("Tablet", 260.00, 20.00);
		System.out.println(p1.priceTag());
		
		Product p2 = new UsedProduct("Iphone", 400.00, new Date(15/03/2017));
		System.out.println(p2.priceTag());
		
		
		
		sc.close();
	}
	
}
